<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp">

    <TextView
        android:id="@+id/tvStatus"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Ready"
        android:textSize="18sp"
        android:textStyle="bold"
        android:gravity="center"
        android:padding="16dp"
        android:background="#E3F2FD"
        android:layout_marginBottom="16dp"/>

    <Button
        android:id="@+id/btnRecordMic"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="ðŸŽ¤ Record from Microphone"
        android:textSize="16sp"
        android:padding="16dp"
        android:layout_marginBottom="8dp"/>

    <Button
        android:id="@+id/btnStopRecording"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="â¹ï¸ Stop Recording"
        android:textSize="16sp"
        android:padding="16dp"
        android:backgroundTint="#F44336"
        android:layout_marginBottom="8dp"/>

    <Button
        android:id="@+id/btnLoadFile"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="ðŸ“ Load Audio File"
        android:textSize="16sp"
        android:padding="16dp"
        android:layout_marginBottom="16dp"/>

    <!-- Reference Transcript Section -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Reference Transcript:"
        android:textSize="14sp"
        android:textStyle="bold"
        android:layout_marginBottom="4dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="8dp">

        <Button
            android:id="@+id/btnLoadTranscript"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Load TXT"
            android:textSize="14sp"
            android:padding="12dp"
            android:layout_marginEnd="8dp"/>

        <Button
            android:id="@+id/btnClearTranscript"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Clear"
            android:textSize="14sp"
            android:padding="12dp"/>
    </LinearLayout>

    <EditText
        android:id="@+id/etReferenceTranscript"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:hint="Type reference transcript here..."
        android:inputType="textMultiLine"
        android:gravity="top"
        android:padding="8dp"
        android:background="#F5F5F5"
        android:textSize="14sp"
        android:layout_marginBottom="16dp"/>

    <!-- Results Section -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Transcription Result:"
        android:textSize="14sp"
        android:textStyle="bold"
        android:layout_marginBottom="4dp"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="#F5F5F5"
        android:padding="12dp"
        android:layout_marginBottom="8dp">

        <TextView
            android:id="@+id/tvResult"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="No transcription yet..."
            android:textSize="14sp"
            android:textColor="#000000"/>
    </ScrollView>

    <!-- WER Display -->
    <TextView
        android:id="@+id/tvWER"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text=""
        android:textSize="16sp"
        android:textStyle="bold"
        android:gravity="center"
        android:padding="12dp"
        android:background="#FFF3E0"
        android:visibility="gone"/>

</LinearLayout>








